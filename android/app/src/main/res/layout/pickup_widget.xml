<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待取件"
        android:textColor="#111111"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0 件待取"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/widget_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="暂无待取"
        android:textColor="#999999"
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/widget_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_item_1_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****1234"
            android:textColor="#111111"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_item_1_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="驿站 · 01-16 18:00"
            android:textColor="#666666"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_item_2_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****5678"
            android:textColor="#111111"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_item_2_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="驿站 · 01-17 12:00"
            android:textColor="#666666"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_item_3_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****9012"
            android:textColor="#111111"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_item_3_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="驿站 · 01-18 09:00"
            android:textColor="#666666"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>
